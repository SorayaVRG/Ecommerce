@model Rocosa_Modelos.Categoria

@{
    ViewData["Title"] = "Eliminar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post" asp-action="Eliminar">
    <input asp-for="Id" hidden />
    <div class="border p-4 rounded bg-light">

        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="form-group row">
            <h2 class="text-danger pl-3">¿Está seguro de eliminar esta Categoría?</h2>
        </div>

        <div class="container">
            <div class="row mb-3">
                <div class="col-md-6">
                    <label asp-for="NombreCategoria" class="form-label">Nombre Categoría</label>
                    <input asp-for="NombreCategoria" disabled class="form-control" />
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-6">
                    <label asp-for="MostrarOrden" class="form-label">Orden</label>
                    <input asp-for="MostrarOrden" disabled class="form-control" />
                </div>
            </div>

            <div class="d-grid gap-2 d-md-block">
                <a asp-controller="Categoria" asp-action="Index" class="btn btn-secondary">Regresar</a>
                <button type="submit" class="btn btn-danger">Eliminar</button>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
